    <UserControl x:Class="VisualBuffer.BubbleFX.Controls.BubbleView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 MinWidth="220" MinHeight="170">
        <UserControl.Resources>
            <!-- Абсолютно голая кнопка -->
            <Style x:Key="Button.Ghost" TargetType="Button">
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="Background" Value="Transparent"/>
                <!-- важно для hit-test -->
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Focusable" Value="False"/>
                <!-- без таб-фокуса -->
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="SnapsToDevicePixels" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <!-- Никаких триггеров. Только зона клика + контент -->
                            <Border Background="{TemplateBinding Background}" SnapsToDevicePixels="True">
                                <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </UserControl.Resources>
        <!-- Тащим за весь пузырь; прозрачность/видимость управляются из кода -->
        <Border x:Name="Root"
                CornerRadius="20"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="HeaderRow" Height="25"/>
                    <RowDefinition x:Name="ContentRow" Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>

                <!-- PIN (слева). В режиме PIN плитка становится прозрачной, видна только PNG -->
            <Border x:Name="PinArea"
                    Grid.Column="0" Grid.Row="0"
                    CornerRadius="14,0,0,0"
                    BorderThickness="2,2,0,0"
                    Opacity="1">
                <Button x:Name="PinBtn"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="PinBtn_Click"
                        Style="{StaticResource Button.Ghost}">
                    <Image x:Name="PinIcon"
                           Width="20" Height="20"
                           Source="/Resources/redPIN3.png"
                           RenderTransformOrigin="0.5,0.5"
                           Stretch="Uniform"
                           SnapsToDevicePixels="True"
                           RenderOptions.BitmapScalingMode="HighQuality">
                        <Image.Style>
                            <Style TargetType="Image">
                                <Setter Property="Margin" Value="3,1,2,0"/>
                                <!-- заменяем привязку на нормальную -->
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPinned, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Margin" Value="3,4,2,5"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Button>

                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#4f4f4f"/>
                        <Setter Property="BorderBrush" Value="#9AA0A6"/>
                        <Setter Property="BorderThickness" Value="0,2,2,0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <!-- hover (когда НЕ pinned) -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                                    <Condition Binding="{Binding IsPinned, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Background" Value="#636363"/>
                            </MultiDataTrigger>

                            <!-- pressed (когда НЕ pinned) -->
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsPressed, ElementName=PinBtn}" Value="True"/>
                                    <Condition Binding="{Binding IsPinned, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False"/>
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Background" Value="#3b3b3b"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiDataTrigger>

                            <!-- PIN: ВСЕГДА последний, чтобы перебить остальные -->
                            <DataTrigger Binding="{Binding IsPinned, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border x:Name="CopyArea"
                        Grid.Column="1" Grid.Row="0"
                        CornerRadius="0,0,0,0"
                        BorderThickness="0.7,2,0,0"
                        Opacity="1">
                    <Button x:Name="CopyBtn"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Click="CopyBtn_Click"
                            ToolTip="Заблокировать/разблокировать пузырь"
                            Style="{StaticResource Button.Ghost}">
                        <Image x:Name="CopyIcon"
                               Width="13" Height="13"
                               Source="/Resources/blueCopy2.png"
                               RenderTransformOrigin="0.5,0.5"/>
                    </Button>

                <Border.Style>
                    <Style TargetType="Border">
                        <!-- базовые значения, меняй под себя -->
                        <Setter Property="Background" Value="#4f4f4f"/>
                        <Setter Property="BorderBrush" Value="#9AA0A6"/>
                        <Setter Property="BorderThickness" Value="0,2,2,0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <!-- Hover по Border (и его детям) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#636363"/>
                                <!-- hover фон -->
                                <!-- <Setter Property="BorderBrush" Value="#B0C7CE"/>
                hover граница -->
                            </Trigger>

                            <!-- Pressed: состояние берём с внутренней кнопки по имени -->
                            <DataTrigger Binding="{Binding IsPressed, ElementName=CopyBtn}" Value="True">
                                <Setter Property="Background" Value="#3b3b3b"/>
                                <!-- pressed фон -->
                                <!--<Setter Property="BorderBrush" Value="#7FAAB2"/>
                 pressed граница -->
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <!-- Disabled (если вдруг Border отключишь) -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

            </Border>



                <!-- Заголовок -->
                <Border x:Name="HeaderTitleArea"
                        Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="4"
                        Background="#9AA0A6">
                    <Grid>
                        <TextBlock x:Name="TitleText"
                                   Text="{Binding Title}"
                                   TextAlignment="Left"
                                   Margin="30,0,8,0"
                                   VerticalAlignment="Center"
                                   FontSize="15"
                                   FontFamily="Cascadia Code"
                                   Foreground="Beige"
                                   MouseLeftButtonDown="TitleText_MouseLeftButtonDown"/>
                        <TextBox x:Name="TitleEdit"
                                 Visibility="Collapsed"
                                 Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="28,2,6,2"
                                 FontSize="15"
                                 FontFamily="Cascadia Code"
                                 Foreground="Beige"
                                 Background="#333333"
                                 BorderBrush="#FFFFFF"
                                 VerticalContentAlignment="Center"
                                 KeyDown="TitleEdit_KeyDown"
                                 LostKeyboardFocus="TitleEdit_LostKeyboardFocus"/>
                    </Grid>
                </Border>

                <!-- Закрыть -->
                <Border x:Name="CloseArea"
                        Grid.Column="6" Grid.Row="0"
                        CornerRadius="0,15,0,0"
                        BorderThickness="0,2,2,0">
                    <Button x:Name="CloseBtn"
                            Background="Transparent"
                            Content="✕" Margin="0"
                            Foreground="#9AA0A6"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            Click="CloseBtn_Click">
                        <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource Button.Ghost}">
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Style>
                        </Button.Style>
                    </Button>

                <Border.Style>
                    <Style TargetType="Border">
                        <!-- базовые значения, меняй под себя -->
                        <Setter Property="Background" Value="#C83A3A"/>
                        <Setter Property="BorderBrush" Value="#9AA0A6"/>
                        <Setter Property="BorderThickness" Value="0,2,2,0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <!-- Hover по Border (и его детям) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D64B4B"/>
                                <!-- hover фон -->
                                <!-- <Setter Property="BorderBrush" Value="#B0C7CE"/>
                                hover граница -->
                            </Trigger>

                            <!-- Pressed: состояние берём с внутренней кнопки по имени -->
                            <DataTrigger Binding="{Binding IsPressed, ElementName=CloseBtn}" Value="True">
                                <Setter Property="Background" Value="#B73636"/>
                                <!-- pressed фон -->
                                <!--<Setter Property="BorderBrush" Value="#7FAAB2"/>
                                 pressed граница -->
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>

                            <!-- Disabled (если вдруг Border отключишь) -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>

            </Border>

                <!-- Контент (именно ЭТА зона будет сужаться вдвое при PIN) -->
                <Border x:Name="ContentArea"
                        Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="7"
                        CornerRadius="0,0,10,10"
                        BorderThickness="2,1,2,2" BorderBrush="#9AA0A6"
                        Background="#6b6b6b"
                        Padding="6"
                        ClipToBounds="True">
                    <ScrollViewer x:Name="ContentScroll"
                                  VerticalScrollBarVisibility="Hidden"
                                  CanContentScroll="True"
                                  IsHitTestVisible="False">
                        <TextBlock x:Name="ContentTextBlock"
                                   Foreground="Beige"
                                   TextWrapping="Wrap"
                                   TextTrimming="CharacterEllipsis"
                                   FontSize="13"
                                   FontWeight="Light"
                                   FontFamily="Cascadia Code"
                                   Text="{Binding ContentText}"
                                   Margin="5"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </UserControl>
